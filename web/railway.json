{
  "$schema": "https://railway.com/railway.schema.json",

  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "web/Dockerfile",
    "watchPatterns": ["web/**"]
  },

  "deploy": {
    "healthcheckPath": "/api/health",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
